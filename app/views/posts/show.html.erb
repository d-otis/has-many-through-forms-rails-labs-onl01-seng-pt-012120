<h1><%= @post.title %></h1>
<p><%= @post.content %></p>
<h2>Categories:</h2>
<% @post.categories.each do |cat| %>
	<%= cat.name %>
<% end %>
<h3>Comments:</h3>
<%= "None" if @post.comments.count == 0 %>
<% @post.comments.each do |comment| %>
	<p><%= comment.content %></p>
	&mdash; <%= comment.username %>
<% end %>
<%= render 'comments/form' %>
